{% extends "::base.html.twig" %}

{% block title %}RogerTruckSupervisor - BackOffice{% endblock %}

{% block body %}
    <h1>Liste des techniciens</h1>
    <table class="table table-stripped">
        <thead>
        <tr>
            <td><b>Nom</b></td>
             <td><b>Email</b></td>
            <td><b>Status</b></td>
        </tr>
        </thead>
        <tbody>
        {% for technician in technicians %}
            <tr class="{% if technician.status %}
            success
        {% else %}
            danger
        {% endif %}" >
                <td>{{ technician.nom }}</td>
                <td>{{ technician.email }}</td>
                <td>
                    {% if technician.status %}
                        Disponible
                    {% else %}
                        En Intervention
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="listDrivers" class="btn btn-primary">Voir la liste des v√©hicules</a>
{% endblock %}
